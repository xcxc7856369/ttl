<view bind:__l="__l"><view class="navigation" style="{{'height:'+(height)+';'}}"><view class="left"></view><view class="title">{{shopname}}</view><navigator class="add_wares right" url="add_wares" hover-class="none"><image src="../../static/tj.png" mode></image></navigator></view><view class="top_box" style="{{'top:'+(height)+';'}}"><view class="sort"><view data-event-opts="{{[['tap',[['open',['$event']]]]]}}" class="{{['title',(KG)?'tab_active':'']}}" bindtap="__e"><text>全部分类</text><image src="{{KG?up:dow}}" mode></image></view><scroll-view class="{{['list',(KG)?'active':'']}}" style="height:400rpx;" scroll-y="true"><block wx:for="{{allCategories}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view data-event-opts="{{[['tap',[['getCommodity',['$0'],[[['allCategories','id',item.id,'id']]]]]]]}}" bindtap="__e">{{item.name}}</view></block></scroll-view></view><view class="sort"><view data-event-opts="{{[['tap',[['open_screen',['$event']]]]]}}" class="{{['title',(KG_sc)?'tab_active':'']}}" bindtap="__e"><text>筛选</text><image src="{{KG_sc?up:dow}}" mode></image></view><view class="{{['list right',(KG_sc)?'active':'']}}"><block wx:for="{{state}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['screen',[index]]]]]}}" bindtap="__e">{{item}}</view></block></view></view></view><view class="content" style="{{'padding-top:'+(height_a)+';'}}"><view class="wares_box"><block wx:for="{{commodities}}" wx:for-item="item" wx:for-index="index" wx:key="id"><view class="wares_list"><view><image src="{{item.iconUrl}}" mode></image></view><view class="wares_infor"><text class="name">{{item.name}}</text><text class="sales_volume">{{"月售"+item.sell_num}}</text><view><text class="money">{{"￥"+item.price}}</text><block wx:if="{{item.enabled!=0}}"><button data-event-opts="{{[['tap',[['cease',['$0',index],[[['commodities','id',item.id,'id']]]]]]]}}" class="{{['down',key==index?'off_shelf':'']}}" bindtap="__e">下架</button></block><block wx:else><button class="down off_shelf">已下架</button></block></view></view></view></block></view></view></view>